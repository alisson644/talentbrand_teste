<!DOCTYPE html>
<html>
  <head>
    <title>Talentbrand</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_pack_tag 'styles', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="text-dark">
    <div class="container">
      <%= yield %>
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show float-right" role="alert">
          <p class="text-justify"><%= notice %></p>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
        </div>
        <% end %>
        <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show float-right"  role="alert">
          <p class="text-justify"><%= alert %></p>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        </div>
    <% end %>
    </div>
  </body>
</html>

<h1 >Anotações</h1>
<%= form_tag("/annotations", method: "get", class:"form-inline my-2 my-lg-0") do %>
  <%= label_tag(:q, "buscar anotações:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search", class:"btn btn-outline-success my-2 my-sm-0") %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Annotation</th>
      <th scope="col">Date</th>
      <th scope="col">Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  

  <tbody>
    <% @annotations.each do |annotation| %>
      <tr>
        <td><%= annotation.title %></td>
        <td><%= annotation.annotation %></td>
        <td><%= annotation.date %></td>
        <td><%= annotation.priority %></td>
        <td><%= link_to 'Show', annotation, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_annotation_path(annotation), class:"btn btn-info" %></td>
        <td><%= link_to 'Destroy', annotation,class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Annotation', new_annotation_path, class:"btn btn-primary" %>
